#version 330 core

uniform float a;
uniform float b;
uniform float c;

uniform float d;
uniform float e;
uniform float f;

in vec2 texCoords;

out vec4 color;

float getSin(float freq) {
    return (1 + sin(freq * texCoords.x))/2;
}
float getCos(float freq) {
    return (1 + cos(freq * texCoords.y))/2;
}

void main() {
    color = vec4(1, 1, 1, (getSin(a) + getSin(b) + getSin(c) + getCos(d) + getCos(e) + getCos(f))/6);
}

